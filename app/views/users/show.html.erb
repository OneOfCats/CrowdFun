<h2>User's show</h2>

<h3>Comments:</h3>
<div id="comments">
	<% @comments.each do |c| %>
		<div class="comment">
			<span>
				<%= c.author %>
			</span>
			<p>
				<%= c.content %>
			</p>
		</div>
	<% end %>
</div>

<h3>Leave a comment:</h3>
<%= form_for [@user, Comment.new] do |f| %>
	<%= f.label :content %>
	<%= f.text_field :content %>
	<%= f.submit %>
<% end %>