<h2>Edit project</h2>

<%= form_for @project do |f| %>
	<% unless @project.published %>
		<%= f.label :title %>
		<%= f.text_field :title %>
		<%= f.label :description %>
		<%= f.text_area :description %>
		<%= f.label :main_picture %>
		<%= f.text_field :main_picture %>
		<%= f.label :main_video %>
		<%= f.text_field :main_video %>
		<%= f.label :realization_duration, 'Realization duration (days)' %>
		<%= f.number_field :realization_duration %>
		<%= f.label :goal, 'Goal amount' %>
		<%= f.text_field :goal %>
	<% end %>
	<% if @project.funded %>
		<%= f.label :result %>
		<%= f.text_area :result %>
	<% end %>
	<%= f.submit %>
<% end %>