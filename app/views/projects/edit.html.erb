<div class="grey-back project-page page-padding">
  <div class="container">
    <div class="row">
    	<div class="col-xs-12">
				<h2>Edit project</h2>

				<%= form_for @project do |f| %>
					<% unless @project.published %>
						<div class="form-block">
							<%= f.label :title %>
							<%= f.text_field :title %>
						</div>
						<div class="form-block">
							<%= f.label :description %>
							<%= f.text_area :description %>
						</div>
						<div class="form-block">
							<%= f.label :main_picture %>
							<%= f.text_field :main_picture %>
						</div>
						<div class="form-block">
							<%= f.label :main_video %>
							<%= f.text_field :main_video %>
						</div>
						<div class="form-block">
							<%= f.label :realization_duration, 'Realization duration (days)' %>
							<%= f.number_field :realization_duration %>
						</div>
						<div class="form-block">
							<%= f.label :goal, 'Goal amount' %>
							<%= f.text_field :goal %>
						</div>
					<% end %>
					<% if @project.funded %>
						<div class="form-block">
							<%= f.label :result, 'Result text' %>
							<%= f.text_area :result %>
						</div>
						<div class="form-block">
							<%= f.label :result_image %>
							<%= f.text_field :result_image, placeholder: 'url' %>
						</div>
						<div class="form-block">
							<%= f.label :result_youtube %>
							<%= f.text_field :result_youtube, placeholder: 'url' %>
						</div>
					<% end %>
					<div class="form-block">
						<%= f.submit 'Submit', class: 'btn' %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>