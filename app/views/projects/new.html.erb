<h2>Create new project</h2>

<%= form_for @project do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<%= f.label :main_picture %>
	<%= f.text_field :main_picture %>
	<%= f.label :main_video %>
	<%= f.text_field :main_video %>
	<%= f.label :realization_duration, 'Realization duration (days)' %>
	<%= f.number_field :realization_duration %>
	<%= f.label :goal, 'Goal amount' %>
	<%= f.text_field :goal %>
	<%= f.label :published, 'Publish now' %>
	<%= f.check_box :published %>
	<%= f.submit %>
<% end %>