<div class="ratings" data-project-id="<%= project.id %>">
  <div class="rating-block">
    <div class="rating-circle">
      <%= image_tag "rating_#{project.get_rounded_rating :preview}.png" %>
      <div class="percents">
        <%= project.preview_rating.round %>%
      </div>
    </div>
    Preview rating
  </div>
  <div class="rating-block">
    <div class="rating-circle">
      <%= image_tag "rating_#{project.get_rounded_rating :admins}.png" %>
      <div class="percents">
        <%= project.admins_rating.round %>%
      </div>
    </div>
    Admins rating
  </div>
  <% if project.result? %>
    <div class="rating-block">
      <div class="rating-circle">
        <%= image_tag "rating_#{project.get_rounded_rating :result}.png" %>
        <div class="percents">
          <%= project.result_rating.round %>%
        </div>
      </div>
      Result rating
    </div>
  <% end %>
  <% if project.result? %>
    <div class="rating-block">
      <div class="rating-circle">
        <%= image_tag "rating_#{project.get_rounded_rating :sponsors}.png" %>
        <div class="percents">
          <%= project.sponsors_rating.round %>%
        </div>
      </div>
      Sponsors rating
    </div>
  <% end %>
</div>