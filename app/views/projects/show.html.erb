<div class="grey-back project-page">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
      	<div class="project-links">
      		<% if user_signed_in? && @project.user_id == current_user.id %>
						<%= link_to 'Edit project', edit_project_path unless @project.published %>
						<%= link_to 'Publish project', publish_project_path unless @project.published %>
						<% if @project.published && @project.opened %>
							<%= link_to 'Create an update', new_project_update_path(@project) %>
							<%= link_to 'Close project', finish_project_path(@project) %>
						<% end %>
						<% if @project.funded && !@project.result %>
							<%= link_to 'Upload a result', edit_project_path %>
						<% end %>
					<% end %>
      	</div>
        <div class="project-header">
          <div class="row">
            <div class="col-md-7">
              <h1><%= @project.title %></h1>
            </div>
            <div class="col-md-5">
              <div class="user-info">
                <div class="line">
                  <a href="" class="avatar"><%= image_tag "/images/avatar.jpg" %></a>
                </div>
                <div class="line">
                  <span>by <%= link_to @project.user.email, @project.user %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="project-info">
          <div class="row">
            <div class="col-md-7">
              <div class="pic">
              	<%= image_tag @project.main_picture %>
              </div>
            </div>
            <div class="col-md-5">
            	<%= render partial: 'projects/progress', locals: { project: @project } %>
              <%= render partial: 'projects/ratings', locals: { project: @project } %>
            </div>
          </div>
        </div>
        <p>
        	<%= @project.description %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="project-contents">
  <div class="tabs">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
        	<% if @project.updates %>
          	<a href="" class="active">Updates</a>
          <% end %>
          <a href="" <% unless @project.updates %>class="active"<% end %>>Comments</a>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="tabs-content">
        	<% if @project.updates %>
	          <div class="tab-1">
	            <div class="project-updates">
	            	<% @project.updates.each do |update| %>
		              <div class="project-update">
		                <div class="project-update-info">
		                  <% update.created_at.strftime "%B:%d" %><br>
		                  <% update.created_at.strftime "%Y" %>
		                </div>
		                <div class="project-update-content">
		                  <h3>
		                  	<%= link_to update.title, project_update_path(@project, update) %>
		                  	<%= link_to project_update_path(@project, update) do %>
		                  		<span><%= update.comments.count %> comments</span>
		                  	<% end %>
		                  </h3>
		                  <%= image_tag update.main_picture %>
		                  <p>
		                    <%= update.description %>
		                  </p>
		                </div>
		              </div>
	              <% end %>
	            </div>
	          </div>
	        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


<% if @project.funded %>
	<h2>Funded!</h2>
<% elsif !@project.opened && @project.published %>
	<h2>Closed!</h2>
<% end %>
<% if @project.result %>
	<div id="result">
		<h2>Result:</h2>
		<%= @project.result %><br><br>
	</div>
<% end %>
<span>by <%= link_to @project.user.email, user_path(@project.user) %></span>

<%= link_to 'Pledge!', new_project_pledge_path(@project) unless @project.user == current_user || !@project.opened %>
<%= link_to 'See Pledgers', project_pledges_path(@project) %>

<div id="likes">
	<div id="rating">
		Рейтинг пользователей: <%= @users_rating.round %>%<br>
		Рейтинг админов: <%= @admins_rating.round %>%<br>
		<% if @project.funded %>
			Рейтинг спонсоров: <%= @pledgers_rating.round %>%
		<% end %>
	</div>
	<div class="buttons">
		<% unless @voted %>
			<%= link_to 'Like', like_project_url(@project), remote: true, method: :post %>
			<%= link_to 'Dislike', dislike_project_url(@project), remote: true, method: :post %>
		<% end %>
	</div>
</div>

<% if @project.published %>
	Published at: <%= local_time(@project.published_at) %>
<% end %>

<h3>Comments:</h3>
<%= render partial: 'comments/comments', locals: {comments: @project.comments} %>

<% if current_user %>
	<h2>Leave a comment:</h2>
	<%= render partial: 'comments/form', locals: {commentable_type: controller_name.classify, commentable_id: @project.id} %>
<% else %>
	<h2>Login to leave a comment</h2>
<% end %>