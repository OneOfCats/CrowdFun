<br>
<% if user_signed_in? && @project.user_id == current_user.id %>
	<%= link_to 'Редактировать проект', edit_project_path unless @project.published %>
	<%= link_to 'Опубликовать проект', publish_project_path unless @project.published %>
	<% if @project.published && @project.opened %>
		<%= link_to 'Создать апдейт', new_project_update_path(@project) %>
		<%= link_to 'Завершить проект', finish_project_path(@project) %>
	<% end %>
	<% if @project.funded && !@project.result %>
		<%= link_to 'Выложить результат', edit_project_path %>
	<% end %>
<% end %>

<%= image_tag @project.main_picture %>
<%= @project.main_video %>
<h1><%= @project.title %></h1>
<% if @project.funded %>
	<h2>Funded!</h2>
<% elsif !@project.opened && @project.published %>
	<h2>Closed!</h2>
<% end %>
<% if @project.result %>
	<div id="result">
		<h2>Result:</h2>
		<%= @project.result %><br><br>
	</div>
<% end %>
<span>by <%= link_to @project.user.email, user_path(@project.user) %></span>
<%= number_to_currency @project.funds %> out of <%= number_to_currency @project.goal %>
<%= link_to 'Pledge!', new_project_pledge_path(@project) unless @project.user == current_user || !@project.opened %>
<%= link_to 'See Pledgers', project_pledges_path(@project) %>
<div id="likes">
	<div id="rating">
		Users rating: <%= @users_rating.round %>%<br>
		Admins rating: <%= @admins_rating.round %>%
	</div>
	<div class="buttons">
		<% unless @voted || !@project.opened %>
			<%= link_to 'Like', like_project_url(@project), remote: true, method: :post %>
			<%= link_to 'Dislike', dislike_project_url(@project), remote: true, method: :post %>
		<% end %>
	</div>
</div>
<% if @project.deadline && @project.opened %>
	Time left: <%= distance_of_time_in_words Time.current, @project.deadline %>
<% end %>
<p>
	<%= @project.description %>
</p>
<% if @project.published %>
	Published at: <%= local_time(@project.published_at) %>
<% end %>

<h3>Updates</h3>
<% @project.updates.each do |u| %>
	<%= link_to u.title, [@project, u] %>
	<%= local_time(u.created_at) %>
	<p>
		<%= u.description %>
	</p> 
<% end %>

<h3>Comments:</h3>
<%= render partial: 'comments/comments', locals: {comments: @project.comments} %>

<% if current_user %>
	<h2>Leave a comment:</h2>
	<%= render partial: 'comments/form', locals: {commentable_type: controller_name.classify, commentable_id: @project.id} %>
<% else %>
	<h2>Login to leave a comment</h2>
<% end %>